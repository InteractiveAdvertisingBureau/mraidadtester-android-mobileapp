<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/sdk_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_header_text_size"

        android:layout_alignParentTop="true"
        android:text="@string/Fragment2"

        android:textSize="@dimen/default_running_text_size_small"
        android:textStyle="bold"
        android:layout_margin="@dimen/default_text_size_small"
        />

    <ListView
        android:id="@+id/sdk_list_item"
        android:layout_below="@+id/sdk_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
    </ListView>


</RelativeLayout>