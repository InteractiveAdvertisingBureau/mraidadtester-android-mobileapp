<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/test_header"
        layout="@layout/test_ad_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/default_running_text_size_medium">

        <TextView
            android:id="@+id/user_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="@dimen/default_running_text_size_medium" />

        <TextView
            android:id="@+id/company_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_text_size_small_very_extra"
            android:gravity="left"
            android:text="Company"
            android:textColor="@color/text_color_grey_one"
            android:textSize="@dimen/default_running_text_size_medium" />

        <TextView
            android:id="@+id/version_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_text_size_small_very_extra"
            android:gravity="left"
            android:text="Email             "
            android:textColor="@color/text_color_grey_one"
            android:textSize="@dimen/default_running_text_size_medium" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
           >

        <TextView
            android:id="@+id/accesskey_textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_text_size_small_very_extra"
            android:gravity="left"
            android:text="             "
            android:layout_toLeftOf="@+id/user_email_textView"
            android:textColor="@color/text_color_grey_one"
            android:ellipsize="end"
            android:textSize="@dimen/default_text_size" />
            <TextView
                android:id="@+id/user_email_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_text_size_small_very_extra"
                android:gravity="left"
                android:text="  Mail"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_color_red"
                android:textSize="@dimen/default_text_size" />

            </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_line_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/default_margin_from_top_large"
            android:background="@color/text_color_grey_one" />

        <TextView
            android:id="@+id/policy_textView"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/default_margin_from_top_large"
            android:layout_marginTop="@dimen/default_margin_from_top_large"
            android:gravity="center"
            android:text="@string/policy_text3"
            android:textColor="@color/red"
            android:textSize="@dimen/default_text_size" />

    </LinearLayout>
</LinearLayout>